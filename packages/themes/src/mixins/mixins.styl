clearfix()
  zoom: 1

  &:before, &:after
    content: ''
    display: table

  &:after
    clear: both

ellipsis()
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
  word-wrap: normal

utils-user-select($value)
  -moz-user-select: $value
  -webkit-user-select: $value
  -ms-user-select: $value

@import './button.styl'
