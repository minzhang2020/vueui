[class*='vu-col-']
  float: left
  box-sizing: border-box

.el-col-0
  display: none

for i in (1 .. 24)
  .vu-col-{i}
    width: (1 / 24 * i * 100) * 1%

size = sm 768, md 992, lg 1200, xl 1920

for s in size
  @media only screen and (min-width: (s[1]) px)
    .el-col-{s[0]}-0
      display: none

    for i in (1 .. 24)
      .vu-col-{s[0]}-{i}
        width: (1 / 24 * i * 100) * 1%

      .vu-col-{s[0]}-offset-{i}
        margin-left: (1 / 24 * i * 100) * 1%
